{
  "parameters": {
    "api": {
      "baseUrl": "https://us4.api.mailchimp.com/3.0/",
      "authentication": {
        "type": "basic"
      },
      "pagination": {
        "method": "offset",
        "offsetParam": "offset",
        "limitParam": "count",
        "limit": 1
      }
    },
    "config": {
      "debug": true,
      "username": "michal.hruska@keboola.com",
      "#password": "KBC::ProjectSecure::",
      "outputBucket": "ge-tutorial",
      "jobs": [
        {
          "endpoint": "campaigns",
          "dataField": "campaigns",
          "children": [
            {
              "endpoint": "campaigns/{campaign_id}/send-checklist",
              "dataField": "items",
              "placeholders": {
                "campaign_id": "id"
              }
            },
            {
              "endpoint": "campaigns/{campaign_id}/content",
              "dataField": ".",
              "dataType": "content",
              "placeholders": {
                "campaign_id": "id"
              }
            }
          ]
        }
      ],
      "mappings": {
        "content": {
          "parent_id": {
            "type": "user",
            "mapping": {
              "destination": "campaign_id",
              "primaryKey": true
            }
          },
          "plain_text": {
            "mapping": {
              "destination": "text"
            }
          },
          "html": {
            "mapping": {
              "destination": "html"
            }
          }
        }
      }
    }
  }
}
